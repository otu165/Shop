<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintItemFragMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgItemFragMenu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtItemFragMenu"
        android:text="테스트 메시지"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgItemFragMenu"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemFragMenu"
        app:layout_constraintLeft_toRightOf="@+id/imgItemFragMenu"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/txtItemFragMenuCost"
        android:text="가격"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/imgItemFragMenu"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemFragMenu"
        app:layout_constraintLeft_toRightOf="@+id/imgItemFragMenu"
        app:layout_constraintVertical_bias="0.7"/>

</androidx.constraintlayout.widget.ConstraintLayout>